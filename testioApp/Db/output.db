record(bo, "$(Sys){GPIO:$(Pin)}OUT"){
    field(DTYP, "devgpio")
    field(DESC, "$(Desc)")
    field(OUT, "@$(Pin) $(Logic)")
    field(ZNAM, "OFF")
    field(ONAM, "ON")
    field(ZSV, "NO_ALARM")
    field(OSV, "NO_ALARM")
    field(DOL, "0")
    field(PINI, "YES")
}

# $(Pin) can be the number, the name or the key:
# "60", "GPIO_28" or "P9_12"

# $(Logic) can be "H" or "L":
# If H is used, writing 1 to the bo is equivalent to high
# output
